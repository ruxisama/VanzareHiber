<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>


<GridPane fx:controller= "controller.PersonController" alignment= "CENTER" hgap= "5.0" vgap= "5.0" xmlns:fx= "http://javafx.com/fxml">
    <children>
        <HBox alignment= "TOP RIGHT" GridPane.columnIndex= "1" GridPane.rowIndex= "7">
           <children>
               <Button fx:id= "closeBtn" onAction= "#closeForm"/>
               
           </children>
           
       </HBox>
    
       <Label text= "Add new person" GridPane.columnIndex= "0" GridPane.rowIndex= "0" GridPane.columnSpan= "2">
           <Font size= "30.0"/>
           
       </Label> 
       
       <Label text= "First Name"  GridPane.columnIndex= "0" GridPane.rowIndex= "2"/> 
       <Label text= "Last Name"  GridPane.columnIndex= "0" GridPane.rowIndex= "3"/> 
       <Label text= "Address"  GridPane.columnIndex= "0" GridPane.rowIndex= "4"/> 
       <TextField fx:id= "firstName" GridPane.columnIndex= "1" GridPane.rowIndex= "2"/>
       <TextField fx:id= "lastName" GridPane.columnIndex= "1" GridPane.rowIndex= "3"/>
       <TextField fx:id= "address" GridPane.columnIndex= "1" GridPane.rowIndex= "4"/>
       
       <HBox alignment= "TOP RIGHT" GridPane.columnIndex= "1" GridPane.rowIndex= "7">
           <children>
               <Button mnemonicParsing= "true" text= "_Save" fx:id= "saveBtn" onAction= "#savePerson"/>
               <Button mnemonicParsing= "true" text= "_Clear" fx:id= "clearBtn" onAction= "#clearPerson"/>
           </children>
           
       </HBox>
    </children>
    <padding>
        <Insets bottom= "15.0" left= "15.0" right= "15.0" top= "15.0"/>
    </padding>
</GridPane>
